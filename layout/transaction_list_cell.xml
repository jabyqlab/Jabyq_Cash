<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transaction_list_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:mode="twoLine"
    android:orientation="horizontal"
    android:padding="7dp"
    android:paddingStart="?attr/listPreferredItemPaddingStart"
    android:paddingEnd="?attr/listPreferredItemPaddingEnd">

    <ImageView
        android:id="@+id/receive"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/receive"
        android:backgroundTint="?attr/textColor"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/send"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/send"
        android:backgroundTint="?attr/textColor"
        android:visibility="visible" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="5dp" />

    <ImageView
        android:id="@+id/satoshidice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/satoshidice"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/slptx"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logo_slp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cashshuffle_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/cashshuffle_logo"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/cashacct_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/cashacct"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceListItemSecondary" />
    </LinearLayout>
</LinearLayout>